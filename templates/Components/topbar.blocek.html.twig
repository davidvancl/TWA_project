                {% if not app.user %}
                    <a class="btn btn-sm btn-outline-secondary" href="{{ path('app_login') }}">Přihlásit se</a>
                {% else %}
                    <a href="{{ path('app_profile') }}" class="top-title-profile">{{ app.user.username }}</a>
                    <a href="{{ path('app_profile') }}">

                        <img src="{{ asset('images/user.png') }}" alt="" width="45" height="45">
                    </a>
