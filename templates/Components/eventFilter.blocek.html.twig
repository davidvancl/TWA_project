<div id="filter_panel" class="d-flex flex-column flex-shrink-0 p-3 text-white bg-dark"
     style="width: 40px;">
    <img src="{{ asset('images/open.png') }}" style="display: none; left: 5px" id="filter_open" class="js_icons"
         height="20" width="20" alt="open_sidebar"
         onclick="filterPanelSwitch()">
    <img src="{{ asset('images/close.png') }}" style="left: 5px" id="filter_close" height="20" class="js_icons"
         width="20" alt="close_sidebar" onclick="filterPanelSwitch()">
    <div id="filter_content" style="display: none">
        <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
            <svg class="bi me-2" width="40" height="32">
                <use xlink:href="#bootstrap"></use>
            </svg>
            <span class="fs-4">Filtr událostí</span>
        </a>
        <hr>
        <ul class="nav nav-pills flex-column mb-auto">
            <li class="nav-item">
                <input type="checkbox" id="event_filter_form_show_finished" name="event_filter_form[show_finished]"
                       class="form-check-input" style="vertical-align: middle" data-selector="show_finished" value="1">
                <label class="form-check-label" for="event_filter_form_show_finished" style="vertical-align: middle">
                    Zobrazit dokončené
                </label>
            </li>
            <li>
                <input type="checkbox" id="event_filter_form_show_main_page" name="event_filter_form[show_main_page]"
                       class="form-check-input" style="vertical-align: middle" data-selector="show_main_page" value="1" {% if 'ROLE_ADMIN' not in app.user.roles %}hidden{% endif %}>
                <label class="form-check-label" for="event_filter_form_show_main_page" style="vertical-align: middle"
                       {% if 'ROLE_ADMIN' not in app.user.roles %}hidden{% endif %}>
                    Zobrazit články hlavní stránky
                </label>
            </li>
            <hr>
            <li>
                <input type="checkbox" id="event_filter_form_only_before_term"
                       name="event_filter_form[only_before_term]" class="form-check-input"
                       style="vertical-align: middle" data-selector="only_before_term" value="1">
                <label class="form-check-label" for="event_filter_form_only_before_term" style="vertical-align: middle">
                    Pouze před termínem
                </label>
            </li>
            <li>
                <input type="checkbox" id="event_filter_form_only_after_term" name="event_filter_form[only_after_term]"
                       class="form-check-input" style="vertical-align: middle" data-selector="only_after_term"
                       value="1">
                <label class="form-check-label" for="event_filter_form_only_after_term" style="vertical-align: middle">
                    Pouze po termínu
                </label>
            </li>
            <li>
                <input type="checkbox" id="event_filter_form_show_only_private"
                       name="event_filter_form[show_only_private]" class="form-check-input"
                       style="vertical-align: middle" data-selector="show_only_private" value="1">
                <label class="form-check-label" for="event_filter_form_show_only_private" style="vertical-align: middle">
                    Pouze soukromé
                </label>
            </li>
            <li>
                <input type="checkbox" id="event_filter_form_show_only_public"
                       name="event_filter_form[show_only_public]" class="form-check-input"
                       style="vertical-align: middle" data-selector="show_only_public" value="1">
                <label class="form-check-label" for="event_filter_form_show_only_public" style="vertical-align: middle">
                    Pouze veřejné
                </label>
            </li>
            <li style="margin-top: 10px">
                <div class="form-group">
                    <label for="event_filter_form_sort"></label><select id="event_filter_form_sort" name="event_filter_form[sort]" class="form-select form-select-sm" data-selector="sort">
                        <option value="none" selected="selected">Seřadit dle:</option>
                        <option value="date_created">Datum vytvoření</option>
                        <option value="date_to">Termín odevzdání</option>
                    </select>
                </div>
            </li>
            <li>
                <div class="form-group">
                    <label for="event_filter_form_sort_type"></label>
                    <select id="event_filter_form_sort_type" name="event_filter_form[sort_type]" class="form-select form-select-sm" data-selector="sort_type">
                        <option value="none" selected="selected">Typ řazení:</option>
                        <option value="ASC">Vzestupně</option>
                        <option value="DESC">Sestupně</option>
                    </select>
                </div>
            </li>
            <li>
                <button class="btn btn-primary" style="margin-top: 10px; width: 100%"
                        onclick="applyFilter('{{ app.user.email }}', '{{ path('events_data') }}')">Filtrovat události
                </button>
            </li>
        </ul>
    </div>
</div>