<div id="filter_panel" class="d-flex flex-column flex-shrink-0 p-3 text-white bg-dark"
     style="width: 40px;">
    <img src="{{ asset('images/open.png') }}" style="display: none; left: 5px" id="filter_open" class="js_icons" height="20" width="20" alt="open_sidebar"
         onclick="filterPanelSwitch()">
    <img src="{{ asset('images/close.png') }}" style="left: 5px" id="filter_close" height="20" class="js_icons"
         width="20" alt="close_sidebar" onclick="filterPanelSwitch()">
    <div id="filter_content" style="display: none">
        <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
            <svg class="bi me-2" width="40" height="32">
                <use xlink:href="#bootstrap"></use>
            </svg>
            <span class="fs-4">Filtr událostí</span>
        </a>
        <hr>
        {{ form_start(filterForm) }}
        <ul class="nav nav-pills flex-column mb-auto">
            <li class="nav-item">
                {% if app.request.get('show_finished') == 1 %}
                    {{ form_widget(filterForm.show_finished, {'attr': {'class': 'form-check-input', 'style': 'vertical-align: middle', 'checked': 'true'}}) }}
                {% else %}
                    {{ form_widget(filterForm.show_finished, {'attr': {'class': 'form-check-input', 'style': 'vertical-align: middle'}}) }}
                {% endif %}
                <label class="form-check-label" for="flexCheckDefault" style="vertical-align: middle">
                    Zobrazit dokončené
                </label>
            </li>
            <li>
                {% if app.request.get('show_main_page') == 1 %}
                    {{ form_widget(filterForm.show_main_page, {'attr': {'class': 'form-check-input', 'style': 'vertical-align: middle', 'checked': 'true'}}) }}
                {% else %}
                    {{ form_widget(filterForm.show_main_page, {'attr': {'class': 'form-check-input', 'style': 'vertical-align: middle'}}) }}
                {% endif %}
                <label class="form-check-label" for="flexCheckDefault" style="vertical-align: middle"
                       {% if 'ROLE_ADMIN' not in app.user.roles %}hidden{% endif %}>
                    Zobrazit články hlavní stránky
                </label>
            </li>
            <hr>
            <li>
                {% if app.request.get('only_before_term') == 1 %}
                    {{ form_widget(filterForm.only_before_term, {'attr': {'class': 'form-check-input', 'style': 'vertical-align: middle', 'checked': 'true'}}) }}
                {% else %}
                    {{ form_widget(filterForm.only_before_term, {'attr': {'class': 'form-check-input', 'style': 'vertical-align: middle'}}) }}
                {% endif %}
                <label class="form-check-label" for="flexCheckDefault" style="vertical-align: middle">
                    Pouze před termínem
                </label>
            </li>
            <li>
                {% if app.request.get('only_after_term') == 1 %}
                    {{ form_widget(filterForm.only_after_term, {'attr': {'class': 'form-check-input', 'style': 'vertical-align: middle', 'checked': 'true'}}) }}
                {% else %}
                    {{ form_widget(filterForm.only_after_term, {'attr': {'class': 'form-check-input', 'style': 'vertical-align: middle'}}) }}
                {% endif %}
                <label class="form-check-label" for="flexCheckDefault" style="vertical-align: middle">
                    Pouze po termínu
                </label>
            </li>
            <li>
                {% if app.request.get('show_only_private') == 1 %}
                    {{ form_widget(filterForm.show_only_private, {'attr': {'class': 'form-check-input', 'style': 'vertical-align: middle', 'checked': 'true'}}) }}
                {% else %}
                    {{ form_widget(filterForm.show_only_private, {'attr': {'class': 'form-check-input', 'style': 'vertical-align: middle'}}) }}
                {% endif %}
                <label class="form-check-label" for="flexCheckDefault" style="vertical-align: middle">
                    Pouze soukromé
                </label>
            </li>
            <li>
                {% if app.request.get('show_only_public') == 1 %}
                    {{ form_widget(filterForm.show_only_public, {'attr': {'class': 'form-check-input', 'style': 'vertical-align: middle', 'checked': 'true'}}) }}
                {% else %}
                    {{ form_widget(filterForm.show_only_public, {'attr': {'class': 'form-check-input', 'style': 'vertical-align: middle'}}) }}
                {% endif %}
                <label class="form-check-label" for="flexCheckDefault" style="vertical-align: middle">
                    Pouze veřejné
                </label>
            </li>
            <li style="margin-top: 10px">
                <div class="form-group">
                    {{ form_widget(filterForm.sort) }}
                </div>
            </li>
            <li>
                <div class="form-group">
                    {{ form_widget(filterForm.sort_type) }}
                </div>
            </li>
            <li>
                <button class="btn btn-primary" type="submit" style="margin-top: 10px; width: 100%">Filtrovat události
                </button>
            </li>
        </ul>
        {{ form_end(filterForm) }}
    </div>
</div>