{% block body %}
    <div style="width: 100%; height: 100%" class="text-center">
        <div class="modal-dialog" role="document">
            <div class="modal-content rounded-5 shadow">
                <main class="form-signin">
                    <form method="post">
                        <a href="{{ path('main_controller') }}">
                            <img class="mb-4" src="{{ asset('images/blocek_icon.png') }}" alt="" width="72" height="57">
                        </a>
                        <h1 class="h3 mb-3 fw-normal">Přihlášení</h1>


                        <div class="form-floating">
                            <input type="email" class="form-control" id="inputEmail" name="email" placeholder="name@example.com"
                                   style="cursor: auto;" autocomplete="off" value="{{ last_username }}" required autofocus>
                            <label for="inputEmail">Emailová adresa</label>
                        </div>
                        <div class="form-floating">
                            <input type="password" class="form-control" id="inputPassword" placeholder="Heslo"
                                   style="cursor: auto;" name="password" autocomplete="current-password" required>
                            <label for="inputPassword">Heslo</label>
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" value="remember-me"> Zapamatovat si mě
                            </label>
                        </div>
                        <button class="w-100 btn btn-lg btn-primary" type="submit">Přihlásit se</button>
                        <a href="{{ path('app_register') }}" style="text-decoration: none">
                            <div class="mb-1 text-muted">Registrovat se</div>
                        </a>
                        <p class="mt-5 mb-3 text-muted">© 2021-{{ year }}</p>
                    </form>
                </main>
            </div>
        </div>
    </div>
{% endblock %}